{
  "name": "ECommerce Microservice",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "dotnet-test-explorer.testProjectPath": "**/*.sln",
        "dotnet-test-explorer.showCodeLens": true
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "natqe.reload",
        "formulahendry.dotnet-test-explorer",
        "ms-dotnettools.csdevkit"
      ],
      "launch": {
        "configurations": [
          {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/source/TheHireFactory.ECommerce.Api/bin/Debug/net8.0/TheHireFactory.ECommerce.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/source/TheHireFactory.ECommerce.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
              "action": "openExternally",
              "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
              "/Views": "${workspaceFolder}/Views"
            }
          },
          {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
          }
        ]
      },
      "tasks": [
        {
          "label": "build",
          "command": "dotnet",
          "type": "process",
          "args": [
            "build",
            "${workspaceFolder}/source/TheHireFactory.ECommerce.sln",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
          ],
          "problemMatcher": "$msCompile"
        },
        {
          "label": "publish",
          "command": "dotnet",
          "type": "process",
          "args": [
            "publish",
            "${workspaceFolder}/source/TheHireFactory.ECommerce.sln",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
          ],
          "problemMatcher": "$msCompile"
        },
        {
          "label": "watch",
          "command": "dotnet",
          "type": "process",
          "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/source/TheHireFactory.ECommerce.sln"
          ],
          "problemMatcher": "$msCompile"
        }
      ]
    }
  },
  "remoteUser": "root"
}